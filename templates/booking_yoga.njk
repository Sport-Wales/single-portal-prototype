{% extends "base_booking.njk" %}
{% block content %}
   
<!-- NUNJUCKS CHILD TEMPLATE CONTENT -->
        
<div class="container">
    <nav class="breadcrumbs" aria-label="breadcrumb">
        <ol style="background-color: transparent;" class="breadcrumb">
            <li class="breadcrumb-item"><a href="portal.html">Home</a></li>
            <li class="breadcrumb-item" ><a href="booking.html">Manage bookings</a></li>
            <li class="breadcrumb-item "><a href="booking_national_centre.html">Cardiff National Centre</a></li>
            <li class="breadcrumb-item "><a href="booking_classes.html">Book a class</a></li>
            <li class="breadcrumb-item active" aria-current="page">Yoga</li>
        </ol>
    </nav>
    <h1 class="font-weight-bold mt-5 mb-5">Book Yoga </h1>
    <form action="">
        <label for="datepicker">Pick your date:</label>
        <input id="datepicker" placeholder="Select a date" class="form-control"/>
        <label for="times">Pick your time:</label>
        <select id="times" name="times" class="form-control">
            <option value="10am">10:00 - 11:00</option>
            <option value="11am">11:00 - 12:00</option>
            <option value="12pm">12:00 - 13:00</option>
            <option value="1pm">13:00 - 14:00</option>
            <option value="2pm">14:00 - 15:00</option>
            <option value="3pm">15:00 - 16:00</option>
            <option value="4pm">16:00 - 17:00</option>
            <option value="5pm">10:00 - 11:00</option>
        </select>
        <label for="courts">Pick a hall:</label>
        <select id="courts" name="courts" class="form-control">
            <option value="10am">Dance studio</option>
            <option value="11am">Jublie hall</option>

        </select>
    </form>
    <a class="btn btn-danger my-3" href="booking_badminton.html" role="button">Add to basket</a>
    
<script>
    const picker = new easepick.create({
        element: document.getElementById('datepicker'),
        css: [
            'https://cdn.jsdelivr.net/npm/@easepick/bundle@1.2.1/dist/index.css',
        ],
    });
</script>
</div>       
   
{% endblock %}
